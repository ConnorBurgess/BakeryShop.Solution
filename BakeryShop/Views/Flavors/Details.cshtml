@{
  Layout = "_Layout";
}

@model BakeryShop.Models.Flavor;
@using System;
<div class="min-h-screen py-6 flex flex-col justify-center sm:py-12 bg-yellow-200">
  <div class="relative py-3 max-w-screen mx-auto">
    <div class="object-center ">
                  <div class="shadow-lg bg-red-300 rounded-md transform hover:translate-x-2 hover:shadow-2xl p-10">
      <h2 class="text-blue-700 font-bold text-center text-5xl">Flavor Details</h2>
      <hr class="mb-3">
      <h3>Flavor: <span class="text-red-600"> @Html.DisplayFor(model => model.FlavorName)</span></h3>
      @if (@Model.JoinEntities.Count == 0)
      {
        <p>No Treats assigned to a Flavor category</p>
      }
      else
      {
        <h4 class="text-blue-700 font-bold"><span class="text-red-600">@Model.FlavorName</span> assigned to the following Treats:</h4>
         <hr class="mb-3">
        <ul>
          @foreach (var join in Model.JoinEntities)
          {
            
            <li><span class="">@join.Treat.TreatName</span> (<i class="text-green-700 bx bx-cookie">#@join.Treat.TreatId</i>)</li>
          }
        </ul>
      }
      <hr class="my-3 mb-3">
      <div class="text-blue-700">
      <p class="hover:scale-110">@Html.ActionLink("Back to Flavors index", "Index")</p>
      <p class="hover:scale-110">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
      <p class="hover:scale-110">@Html.ActionLink("Remove Flavor", "Delete", new { id = Model.FlavorId })</p>
      </div>
  </div>
</div>
</div>