@{
  Layout = "_Layout";
}
@model BakeryShop.Models.Flavor
<div class="min-h-screen py-6 flex flex-col justify-center sm:py-12 bg-gray-400 bg-opacity-95">
  <div class="relative py-3 max-w-screen w-4/6 mx-auto">
    <div class="object-center">
      <div class="grid min-h-screen place-items-center">
        <div class="w-11/12 p-12 bg-gray-600 sm:w-8/12 md:w-1/2 lg:w-5/12">
          <h1 class="py-3 text-3xl font-bold pb-3 text-center text-blue-300 bg-gray-800">Add Flavor
            <hr>
          </h1>
          <h1 class="text-xl font-semibold">Adding a new flavor is simple. <i class="text-yellow-300 bx bxs-bulb"></i> <br>
            <br> <span class="font-normal text-blue-300">Please fill out the information below in order to add an
              flavor to the database.</span> <i class='bx bxs-pointer'></i>
          </h1>
          <form class="mt-6">
            <div class="flex justify-between gap-3">
              <span class="w-1/2">
                <label for="FlavorName" class="block text-xs font-semibold text-blue-300 uppercase">Flavor name</label>
                <input id="FlavorName" type="text" name="FlavorName" placeholder="Sweet"
                  class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner"
                  required />
              </span>
            </div>
            <label for="assign-treat" class="py-3 block mt-2 text-xs font-semibold text-blue-300 uppercase">Assign
              Treat to Flavor</label>
            <select
              id="TreatId" class="form-control block object-left w-full p-3 mt-2 bg-gray-200 focus:outline-none focus:bg-gray-300 focus:shadow-inner" />
              @foreach (var item in ViewBag.TreatId) {
                <option>@item.TreatName</option>
              }
            </select>
            <button type="submit"
              class="w-full py-3 mt-6 font-medium tracking-widest text-blue-300 uppercase bg-black shadow-lg focus:outline-none hover:bg-gray-900 hover:shadow-none">
              Add Flavor
            </button>
          </form>
        </div>
      </div>
      <h4>Add a new Flavor to database</h4>

      @using (Html.BeginForm())
      {
        @* @Html.LabelFor(model => model.FlavorName)
          @Html.TextBoxFor(model => model.FlavorName)

          @Html.Label("Select Treat")
          @Html.DropDownList("TreatId")

          <input type="submit" value="Add Flavor" class="btn btn-default" /> *@
      }


    </div>
  </div>
</div>