@{
  Layout = "_Layout";
}

@model BakeryShop.Models.Treat
<div class="min-h-screen py-6 flex flex-col justify-center sm:py-12 bg-yellow-300">
  <div class="relative py-3 max-w-screen mx-auto">
    <div class="object-center ">
      <h4>Edit treat: @Html.DisplayFor(model => model.TreatName)</h4>

      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.TreatId)

        @Html.LabelFor(model => model.TreatName)
        @Html.EditorFor(model => model.TreatName)

        <input type="submit" value="Save" />
      }
      <p>@Html.ActionLink("Back to list", "Index")</p>
    </div>
  </div>
</div>